<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFARINANGOS6.Vistas.vAgregar"
             Title="vAgregar">
    <VerticalStackLayout>
        <Label 
            Text="Agregar estudiantes"
            FontSize="20"
            TextColor="Blue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="txtNombre" Placeholder="Ingrese nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"></Entry>
        <Entry x:Name="txtEdad" MaxLength="3" Keyboard="Numeric" Placeholder="Ingrese nombre"></Entry>
        <Button x:Name="btnGuardar" Text="Guardar estudiante" Clicked="btnGuardar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>