<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFARINANGOS6.Vistas.ActEliminar"
             Title="ActEliminar">
    <VerticalStackLayout>
        <Label 
            Text="actualizar eliminar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtCodigo" IsReadOnly="True" Placeholder="Ingrese apellido"></Entry>
        <Entry x:Name="txtNombre" Placeholder="Ingrese nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"></Entry>
        <Entry x:Name="txtEdad" Keyboard="Numeric" Placeholder="Ingrese edad"></Entry>

        <Button x:Name="btnActualizar" Text="Actualizar estudiante" Clicked="btnActualizar_Clicked"></Button>
        <Button x:Name="btnEliminar" Text="Eliminar estudiante" Clicked="btnEliminar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>